<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".acts.MenuActivity">

    <TextView
        android:id="@+id/menu_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:paddingBottom="30dp"
        android:text="Welcome!"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_logoLight"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:paddingTop="60dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_playArrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play with Arrows"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                app:cornerRadius="10dp"
                android:layout_marginHorizontal="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_playSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play with Sensors"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_winsChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wins Chart"
        app:cornerRadius="10dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>